{{!
    @template mod_projetvet/entry_list

    Activity list table.

    Example context (json):
    {
        "isteacher": false,
        "cmid": 1,
        "projetvetid": 1,
        "studentid": 123,
        "hasactivities": true,
        "activities": [
            {
                "title": "Activity 1",
                "year": "2023",
                "category": "Research",
                "completed": true,
                "completedicon": "✓",
                "canedit": true,
                "candelete": true,
                "entryid": 1
            }
        ]
    }
}}
{{#showbacklink}}
<a href="{{backurl}}" class="btn btn-link mb-2">← {{#str}}backtolist, mod_projetvet{{/str}}</a>
<h3>{{#str}}studentactivities, mod_projetvet{{/str}} {{studentname}}</h3>
{{/showbacklink}}

{{^isteacher}}
<div class="mb-3">
    <button class="btn btn-primary"
            data-action="activity-entry-form"
            data-cmid="{{cmid}}"
            data-projetvetid="{{projetvetid}}"
            data-studentid="{{studentid}}"
            data-formsetidnumber="{{formsetidnumber}}">
        {{#str}}newactivity, mod_projetvet{{/str}}
    </button>
</div>
{{/isteacher}}

{{#hasactivities}}
<table class="table table-striped">
    <thead>
        <tr>
            {{#listfields}}
            <th>{{name}}</th>
            {{/listfields}}
            <th>{{#str}}status, mod_projetvet{{/str}}</th>
            <th>{{#str}}actions, mod_projetvet{{/str}}</th>
        </tr>
    </thead>
    <tbody>
    {{#activities}}
        <tr>
            {{#fields}}
            <td>{{displayvalue}}</td>
            {{/fields}}
            <td><span class="badge {{statusclass}}">{{statustext}}</span></td>
            <td>
                {{#canview}}
                <button class="btn btn-sm btn-info"
                        data-action="activity-entry-form"
                        data-readonly="1"
                        data-cmid="{{cmid}}"
                        data-projetvetid="{{projetvetid}}"
                        data-studentid="{{studentid}}"
                        data-entryid="{{entryid}}"
                        data-formsetidnumber="{{formsetidnumber}}">
                    {{#str}}view{{/str}}
                </button>
                {{/canview}}
                {{#canedit}}
                <button class="btn btn-sm btn-secondary"
                        data-action="activity-entry-form"
                        data-cmid="{{cmid}}"
                        data-projetvetid="{{projetvetid}}"
                        data-studentid="{{studentid}}"
                        data-entryid="{{entryid}}"
                        data-formsetidnumber="{{formsetidnumber}}">
                    {{#str}}edit{{/str}}
                </button>
                {{/canedit}}
                {{#candelete}}
                <button class="btn btn-sm btn-danger"
                        data-action="delete-activity"
                        data-entryid="{{entryid}}">
                    {{#str}}delete{{/str}}
                </button>
                {{/candelete}}
            </td>
        </tr>
    {{/activities}}
    </tbody>
</table>
{{/hasactivities}}

{{^hasactivities}}
<p class="alert alert-info">{{#str}}noactivities, mod_projetvet{{/str}}</p>
{{/hasactivities}}
