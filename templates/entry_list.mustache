{{!
    @template mod_projetvet/entry_list

    Activity list table.

    Example context (json):
    {
        "isteacher": false,
        "cmid": 1,
        "projetvetid": 1,
        "studentid": 123,
        "hasactivities": true,
        "activities": [
            {
                "title": "Activity 1",
                "year": "2023",
                "category": "Research",
                "completed": true,
                "completedicon": "âœ“",
                "canedit": true,
                "candelete": true,
                "entryid": 1
            }
        ]
    }
}}
{{^isteacher}}
<div class="mb-3">
    <button class="btn btn-primary"
            data-action="activity-entry-form"
            data-cmid="{{cmid}}"
            data-projetvetid="{{projetvetid}}"
            data-studentid="{{studentid}}"
            data-formsetidnumber="{{formsetidnumber}}">
        {{{addbuttonlabel}}}
    </button>
</div>
{{/isteacher}}

{{#hasactivities}}
<table class="table table-striped th-top">
    <thead>
        <tr>
            {{#listfields}}
            <th>{{name}}</th>
            {{/listfields}}
            <th>{{#str}}status, mod_projetvet{{/str}}</th>
            <th>{{#str}}actions, mod_projetvet{{/str}}</th>
        </tr>
    </thead>
    <tbody>
    {{#activities}}
        <tr>
            {{#fields}}
            <td>
            {{#isfirst}}
            <a href="#" data-action="activity-entry-form"
                data-readonly="1"
                data-cmid="{{cmid}}"
                data-projetvetid="{{projetvetid}}"
                data-studentid="{{studentid}}"
                data-entryid="{{entryid}}"
                data-formsetidnumber="{{formsetidnumber}}">
            {{displayvalue}}
            </a>
            {{/isfirst}}{{^isfirst}}{{displayvalue}}{{/isfirst}}</td>
            {{/fields}}
            <td><span class="small">{{{statustext}}}</span></td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-sm btn-icon icon-no-margin"
                            type="button"
                            id="entry-actions-{{entryid}}"
                            data-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false"
                            aria-label="{{#str}}actions, mod_projetvet{{/str}}">
                        <i class="icon fa fa-ellipsis fa-fw" aria-hidden="true"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="entry-actions-{{entryid}}">
                        {{#canview}}
                        <button class="dropdown-item"
                                data-action="activity-entry-form"
                                data-readonly="1"
                                data-cmid="{{cmid}}"
                                data-projetvetid="{{projetvetid}}"
                                data-studentid="{{studentid}}"
                                data-entryid="{{entryid}}"
                                data-formsetidnumber="{{formsetidnumber}}">
                            <i class="icon fa fa-eye fa-fw" aria-hidden="true"></i>
                            {{#str}}view{{/str}}
                        </button>
                        {{/canview}}
                        {{#canedit}}
                        <button class="dropdown-item"
                                data-action="activity-entry-form"
                                data-readonly="0"
                                data-cmid="{{cmid}}"
                                data-projetvetid="{{projetvetid}}"
                                data-studentid="{{studentid}}"
                                data-entryid="{{entryid}}"
                                data-formsetidnumber="{{formsetidnumber}}">
                            <i class="icon fa fa-pencil fa-fw" aria-hidden="true"></i>
                            {{#str}}edit{{/str}}
                        </button>
                        {{/canedit}}
                        {{#candelete}}
                        <button class="dropdown-item text-danger"
                                data-action="delete-activity"
                                data-entryid="{{entryid}}">
                            <i class="icon fa fa-trash fa-fw" aria-hidden="true"></i>
                            {{#str}}delete{{/str}}
                        </button>
                        {{/candelete}}
                    </div>
                </div>
            </td>
        </tr>
    {{/activities}}
    </tbody>
</table>
{{/hasactivities}}

{{^hasactivities}}
<p class="alert alert-info">{{#str}}noactivities, mod_projetvet{{/str}}</p>
{{/hasactivities}}
