{{!
    @template mod_projetvet/form/element_switch

    Template for switch form element

    Example context (json):
    {
        "element": {
            "id": "id_submitted",
            "name": "submitted",
            "value": "1",
            "checked": true,
            "text": "Send to teacher"
        },
        "label": "Submit",
        "required": false,
        "error": ""
    }
}}
<div id="fitem_{{element.id}}" class="form-group row fitem {{#advanced}}advanced{{/advanced}} {{#error}}has-danger{{/error}}">
    <div class="col-md-3 col-form-label d-flex pb-0 pr-md-0">
        <label for="{{element.id}}" class="d-inline word-break {{#required}}required{{/required}}">
            {{label}}
            {{#required}}
                <abbr class="text-danger" title="{{#str}}required{{/str}}">*</abbr>
            {{/required}}
        </label>
        {{{helpbutton}}}
    </div>
    <div class="col-md-9 form-inline align-items-start felement" data-fieldtype="switch">
        <div class="custom-control custom-switch">
            {{! Hidden field to ensure 0 is sent when checkbox is unchecked }}
            <input type="hidden" name="{{element.name}}" value="0">
            <input type="checkbox"
                   class="custom-control-input"
                   id="{{element.id}}"
                   name="{{element.name}}"
                   value="{{element.value}}"
                   {{#element.checked}}checked{{/element.checked}}
                   {{#element.dataattributes}}data-{{name}}="{{value}}" {{/element.dataattributes}}>
            <label class="custom-control-label" for="{{element.id}}">
                {{element.text}}
            </label>
        </div>
        {{#error}}
            <div class="form-control-feedback invalid-feedback" id="{{element.id}}_error">
                {{{error}}}
            </div>
        {{/error}}
    </div>
</div>
