{{!
    @template mod_projetvet/form/element_subset_entries

    Subset entries list - reusable partial for rendering entry table

    Context variables required for this template:
    * hasentries - Whether there are existing entries
    * entries - Existing entries data with headers and rows
    * subsetformsetidnumber - Formset idnumber for subset
    * parententryid - Parent entry ID
    * studentid - Student ID
    * cmid - Course module ID
    * projetvetid - Projetvet instance ID
    * elementid - Element ID
    * isfrozen - Whether the form is frozen (read-only)

    Example context (json):
    {
        "hasentries": true,
        "entries": {
            "headers": [
                {"name": "Date"},
                {"name": "Animal"}
            ],
            "rows": [
                {
                    "id": 1,
                    "fields": [
                        {"value": "2025-11-19"},
                        {"value": "Rex"}
                    ]
                }
            ]
        },
        "subsetformsetidnumber": "carnet_cas",
        "parententryid": 42,
        "studentid": 5,
        "cmid": 10,
        "projetvetid": 3,
        "elementid": "id_field_123"
    }
}}
{{#hasentries}}
<table class="table table-striped table-sm">
    <thead>
        <tr>
            {{#entries.headers}}
            <th>{{name}}</th>
            {{/entries.headers}}
            <th>{{#str}}actions{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#entries.rows}}
        <tr data-entryid="{{id}}">
            {{#fields}}
            <td>{{value}}</td>
            {{/fields}}
            <td>
                <button type="button"
                        class="btn btn-sm btn-link subset-edit-button"
                        data-action="subset-entry-form"
                        data-formsetidnumber="{{subsetformsetidnumber}}"
                        data-entryid="{{id}}"
                        data-parententryid="{{parententryid}}"
                        data-studentid="{{studentid}}"
                        data-cmid="{{cmid}}"
                        data-projetvetid="{{projetvetid}}"
                        data-elementid="{{elementid}}">
                    {{#isfrozen}}
                    <i class="fa fa-eye"></i> {{#str}}view{{/str}}
                    {{/isfrozen}}
                    {{^isfrozen}}
                    <i class="fa fa-edit"></i> {{#str}}edit{{/str}}
                    {{/isfrozen}}
                </button>
                {{^isfrozen}}
                <button type="button"
                        class="btn btn-sm btn-link text-danger subset-delete-button"
                        data-action="delete-activity"
                        data-entryid="{{id}}">
                    <i class="fa fa-trash"></i> {{#str}}delete{{/str}}
                </button>
                {{/isfrozen}}
            </td>
        </tr>
        {{/entries.rows}}
    </tbody>
</table>
{{/hasentries}}
{{^hasentries}}
<p class="text-muted">{{#str}}noentriesyet, mod_projetvet{{/str}}</p>
{{/hasentries}}
