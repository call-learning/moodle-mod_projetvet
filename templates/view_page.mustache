{{!
    @template mod_projetvet/view_page

    View page for student entries.

    Example context (json):
    {
        "isteacher": false,
        "showbacklink": false,
        "backurl": "",
        "studentname": "",
        "cmid": 1,
        "projetvetid": 1,
        "studentid": 123,
        "activitiesheading": "Activities",
        "showactivitiesbutton": true,
        "activitiesbuttonlabel": "Add activity",
        "activitiesreport": "<div>Report HTML</div>",
        "facetofaceheading": "Face-to-face sessions",
        "showfacetofacebutton": true,
        "facetofacebuttonlabel": "Add session",
        "facetofacereport": "<div>Report HTML</div>"
    }
}}
{{#showbacklink}}
<a href="{{backurl}}" class="btn btn-link mb-2">‚Üê {{#str}}backtolist, mod_projetvet{{/str}}</a>
<h3>{{#str}}studentactivities, mod_projetvet{{/str}} {{studentname}}</h3>
{{/showbacklink}}

<h3>{{activitiesheading}}</h3>

{{#showactivitiesbutton}}
<div class="mb-3">
    <button class="btn btn-primary"
            data-action="activity-entry-form"
            data-cmid="{{cmid}}"
            data-projetvetid="{{projetvetid}}"
            data-studentid="{{studentid}}"
            data-formsetidnumber="activities">
        {{activitiesbuttonlabel}}
    </button>
</div>
{{/showactivitiesbutton}}

{{{activitiesreport}}}

<h3>{{facetofaceheading}}</h3>

{{#showfacetofacebutton}}
<div class="mb-3">
    <button class="btn btn-primary"
            data-action="activity-entry-form"
            data-cmid="{{cmid}}"
            data-projetvetid="{{projetvetid}}"
            data-studentid="{{studentid}}"
            data-formsetidnumber="facetoface">
        {{facetofacebuttonlabel}}
    </button>
</div>
{{/showfacetofacebutton}}

{{{facetofacereport}}}
