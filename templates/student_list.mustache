{{!
    @template mod_projetvet/teacher_student_list

    Teacher view of student list.

    Example context (json):
    {
        "hasstudents": true,
        "students": [
            {
                "fullname": "John Doe",
                "activitiescount": 5,
                "viewurl": "/mod/projetvet/view.php?id=1&studentid=123",
                "userpictureurl": "http://example.com/pix/u/f1.png",
                "label": "John Doe's profile picture",
                "facetofacecount": 3
            }
        ]
    }
}}
<h3>{{#str}}mystudents, mod_projetvet{{/str}}</h3>

{{#hasstudents}}
<table class="table table-striped">
    <thead>
        <tr>
            <th>{{#str}}studentname, mod_projetvet{{/str}}</th>
            <th>{{#str}}activitiescount, mod_projetvet{{/str}}</th>
            <th>{{#str}}facetofacesessions, mod_projetvet{{/str}}</th>
            <th>{{#str}}actions, mod_projetvet{{/str}}</th>
        </tr>
    </thead>
    <tbody>
    {{#students}}
        <tr>
            <td><img src="{{userpictureurl}}" alt="{{label}}" class="userpicture">{{fullname}}</td>
            <td>{{activitiescount}}</td>
            <td>{{facetofacecount}}</td>
            <td>
                <a href="{{viewurl}}" class="btn btn-sm btn-primary">
                    {{#str}}viewactivities, mod_projetvet{{/str}}
                </a>
            </td>
        </tr>
    {{/students}}
    </tbody>
</table>
{{/hasstudents}}

{{^hasstudents}}
<p class="alert alert-info">{{#str}}nostudents, mod_projetvet{{/str}}</p>
{{/hasstudents}}
